default_platform(:ios)

platform :ios do
  before_all do
    setup_ci
    load_asc_api_token
  end

  def bump_build_number()
    latest_build_number = latest_testflight_build_number(initial_build_number: 0)
    return (latest_build_number + 1)
  end

  def bump_version_name()
    puts "*** Incrementing the version number ***"

    version = lane_context[SharedValues::LATEST_TESTFLIGHT_VERSION] || "1.0.0"
    x, y, z = version.split('.').map(&:to_i)
    z += 1
    new_version = [x, y, z].join('.')
  
    return new_version
  end

  desc "Load the App Store Connect API token"
  lane :load_asc_api_token do
    app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_P8"],
      is_key_content_base64: true,
      in_house: false
    )
  end

  desc "Release a new build to Apple Store"
  lane :release_beta do
    commit = last_git_commit
    puts "*** Starting iOS release for commit(#{commit[:abbreviated_commit_hash]}) ***"

    # Print diagnostic information
    puts "*** Environment Diagnostics ***"
    sh("xcodebuild -version")
    sh("pod --version")
    sh("ruby --version")
    
    # Print Swift version
    sh("xcrun swift --version || echo 'Swift command not found'")
    
    # Print system architecture
    sh("uname -m")
    
    # Print CocoaPods environment
    sh("pod env || echo 'pod env command not available'")
    
    # Print Podfile content for debugging
    puts "*** Podfile Content ***"
    sh("cat ../Podfile")

    # Patch facebook_app_events podspec to use FBAudienceNetwork 6.17.0
    puts "*** Patching facebook_app_events podspec ***"
    
    # First attempt: Use the Ruby script
    sh("ruby ../scripts/patch_facebook_podspec.rb") rescue puts "Warning: Podspec patching script failed, trying direct modification"
    
    # Second attempt: Direct in-line patching as a fallback
    begin
      puts "*** Trying direct modification of podspec file ***"
      facebook_podspec_path = nil
      
      # Try to find the podspec
      plugins_dir = "../.symlinks/plugins"
      facebook_plugin_dir = "#{plugins_dir}/facebook_app_events"
      
      if Dir.exist?(facebook_plugin_dir)
        ios_dir = "#{facebook_plugin_dir}/ios"
        if Dir.exist?(ios_dir)
          podspec_files = Dir.glob("#{ios_dir}/*.podspec")
          facebook_podspec_path = podspec_files.first unless podspec_files.empty?
        end
      end
      
      # If podspec was found, patch it
      if facebook_podspec_path && File.exist?(facebook_podspec_path)
        puts "Found podspec at #{facebook_podspec_path}"
        content = File.read(facebook_podspec_path)
        
        # Check if it already has the correct version
        if content.include?("'FBAudienceNetwork', '6.17.0'") || content.include?('"FBAudienceNetwork", "6.17.0"')
          puts "Podspec already has correct version"
        else
          # Try various patterns
          new_content = content.gsub(/'FBAudienceNetwork',\s*'[^']*'/, "'FBAudienceNetwork', '6.17.0'")
          new_content = new_content.gsub(/"FBAudienceNetwork",\s*"[^"]*"/, '"FBAudienceNetwork", "6.17.0"')
          
          # Write back if changed
          if new_content != content
            File.write(facebook_podspec_path, new_content)
            puts "Successfully patched #{facebook_podspec_path}"
          else
            puts "No changes made to the podspec file"
          end
        end
      else
        puts "Could not find facebook_app_events podspec"
      end
    rescue => e
      puts "Error during direct patching: #{e.message}"
    end

    # Check for facebook_app_events plugin podspec
    puts "*** Checking for facebook_app_events plugin podspec ***"
    sh("find ../.symlinks -name \"*.podspec\" | grep facebook") rescue puts "No facebook podspecs found yet"

    #read api key from app_store_connect_api_key lane variable
    api_key = lane_context[SharedValues::APP_STORE_CONNECT_API_KEY]

    puts "*** Sync certificates and profiles ***"
    sync_code_signing(
      api_key: api_key,
      type: "appstore",
      readonly: true,
    )

    build_number = bump_build_number()
    version_name = bump_version_name()

    # Output version and build number to be picked up by GitHub Actions
    sh("echo \"VERSION_NUMBER=#{version_name}\" >> $GITHUB_OUTPUT")
    sh("echo \"BUILD_NUMBER=#{build_number}\" >> $GITHUB_OUTPUT")

    Dir.chdir "../.." do
      puts "*** Installing Flutterfire CLI tools ***"
      sh("dart", "pub", "global", "activate", "flutterfire_cli")
      puts "*** Build flutter iOS release for version #{version_name}+#{build_number} ***"
      sh("flutter", "build", "ipa", "--release", "--obfuscate", "--split-debug-info=symbols", "--build-number=#{build_number}", "--build-name=#{version_name}")
    end

    puts "*** Build and sign iOS app release ***"
    build_app(
      skip_build_archive: true,
      archive_path: "../build/ios/archive/Runner.xcarchive",
    )

    puts "Upload symbols to Crashlytics"
    upload_symbols_to_crashlytics

    puts "*** Upload app to testflight ***"
    upload_to_testflight(api_key: api_key)
  end
end
